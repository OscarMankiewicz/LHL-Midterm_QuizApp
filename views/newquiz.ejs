<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/newquiz.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script src="/routes/users.js"></script>
    <script defer src="/scripts/app.js"></script>
    <script defer src="/scripts/questionMaker.js"></script>
    <script defer src="/scripts/answerMaker.js"></script>


    <%- include('./partials/header') %>
  </head>

  <body>
    <main class ="container">

      <section class="title-maker-container">
        <form method="post" action="/quiz" class="title-maker">
          <div class = title>
            <textarea name="text" id="title-maker" placeholder="What's the topic?">
            </textarea>
          </div>

          <div id =Question1>
            <div class="QuestionBox">
              <div class="Questiontitlecontainer">
                <textarea name="text" class="questionTitle" placeholder="What's the Question?">
                </textarea>
              </div>
              <div class ="AnswersContainer">
                <div class = "ManditoryAnswers">
                  <div class="allAnswer">
                    <div id="answerTagA" class="answerTag"> A </div>
                    <input name="text" id="Answer1-1" class="answer" placeholder="Answer 1">
                    <input type="checkbox" id="checkA" class="check">
                  </div>
                  <div class="allAnswer">
                    <div id="answerTagB" class="answerTag"> B </div>
                    <input name="text" id="Answer1-2" class="answer" placeholder="Answer 2">
                    <input type="checkbox" id="checkB" class="check">
                  </div>
                  <div id="extra3" class="allAnswer">
                    <div id="answerTagC" class="answerTag"> C </div>
                    <input name="text" id="Answer1-3" class="answer" placeholder="Answer 3" >
                    <input type="checkbox" id="checkC" class="check">
                  </div>
                  <div id="extra4" class="allAnswer extra">
                    <div id="answerTagD" class="answerTag"> D </div>
                    <input name="text" id="Answer1-4" class="answer" placeholder="Answer 4">
                    <input type="checkbox" id="checkD" class="check">
                  </div>
                </div>
                <div class="ExtraAnswers">
                  <button class="AddAnswer">+ Add An Answer</button>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <div>
            <button class ="AddQuestion">+ Add A Question</button>
          </div>

          <hr>

          <div class="Createbutton">
            <button type="submit" id="submit" class="Createbutton">Create A Quiz</button>
          </div>
        </form>
    </section>




    </main>
  </body>
</html>
